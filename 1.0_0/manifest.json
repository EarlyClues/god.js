{
    "background": { "scripts": ["/assets/js/jquery-1.9.1.js", "/assets/js/wrapper.js", "/assets/js/Religion.js", "background.js" ] },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "menu.html"
